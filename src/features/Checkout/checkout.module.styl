.checkout
  $center(100%)

.header
  background black
  text-align center
  width 100%
  h4
    $padding-lg()
    margin 0
    color white

.container
  $center(977px)
  $column(between)
  $padding-lg()

.nav
  width 100%
.nav-list
  $row(center)
  li
    $padding-lg()
    display inline-block
  .underline
    border-bottom 1px solid black

.shipping
  header
    text-align center
  button
    background-color white
    border 1px solid black
    line-height 3
    width 100%

.shipping-content
  $center(271px)

.address-list
  $padding-lg()
  header
    border-bottom 1px solid black

.add-address
  padding-bottom $padding-lg-horizontal
  padding-top $padding-lg-horizontal
  $center(271px)
