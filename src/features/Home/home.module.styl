.carousel
  $center(1078px)
  padding $padding-xl-horizontal 0

.subheader
  $center(1078px)
  $row(between)
  padding $padding-xl-horizontal 0
  +$below(md)
    $row(around)
    padding $padding-xl-horizontal $padding-xl-vertical


.subheader-container
  width 450px
  +$below(md)
    &:first-child
      padding-bottom 70px
  .img
    size(450px, 400px)
    padding-bottom $padding-lg-horizontal
  .copy
    padding: $padding-base-horizontal 0

.learn-more
  color $primary
  font-weight 400
  font-size 16px
  .triangle
    margin-left $padding-base-vertical
    size(10px)

.pager
  align-items center
  display flex
  justify-content center
  margin 20px

.page
  background #ccc
  border-radius 50%
  cursor pointer
  height 15px
  width 15px
  & + &
    margin-left 10px


.content-container
  $center(1225px)
  $row(between)
  // max-width 98vw
  padding $padding-xl-horizontal 0
  +$below(1119px)
    $row(around)
    padding $padding-xl-horizontal $padding-xl-vertical

.callout
  $column(between)
  size(556px, 655px)
  text-align left
  border 20px solid $callout-gray-border
  +$below(1119px)
    max-width 96vw

.copy
  $column(between)
  color $text-description
  flex 1
  font-size 18px
  font-weight 300
  line-height $line-height-copy
  padding $padding-xl-horizontal $padding-xl-vertical $padding-xl-horizontal ($padding-xl-vertical * 3)
  line-height $line-height-copy
  color $text-description
  font-weight 300
  font-size 18px
  .title
    text-align center
  .img
    display block
    width 100%

.featured-container
  $row(between)
  max-width 540px
  margin-top 50px
  padding 2px 2px
  +$below(542px)
    $row(around)

.featured
  padding 2px 2px 20px 2px
  transition all .2s ease-in-out
  &:hover
    cursor pointer
    img
      transform scale(1.15)
  +$below(1119px)
    padding-bottom 45px
  .title
    font-weight bold
  .sale
    color $color-sale
  img
    max-width 250px
    transition all .2s ease-in-out


.prefooter
  $center(650px)
  color $text-description
  font-weight 300
  line-height 34px
  padding 150px 0
