.carousel
  $center(1078px)
  padding $padding-xl-horizontal 0
  +$below(md)
    padding 0

.carousel-left
  width 20px
  height 41px
  position absolute
  left 0px
  top 50%
  margin-top -20px
  cursor pointer

.carousel-right
  width 20px
  height 41px
  position absolute
  right 0px
  top 50%
  margin-top -20px
  cursor pointer

.subheader
  $center(1078px)
  $row(between)
  padding $padding-xl-horizontal 0
  +$below(md)
    $row(around)
    padding $padding-xl-horizontal $padding-xl-vertical


.subheader-container
  width 450px
  +$below(md)
    width 45%
    &:first-child
      padding-bottom 70px
    h2
      font-size 1.2em
  .img
    size(450px, 400px)
    padding-bottom $padding-lg-horizontal
    +$below(md)
      size(155px, 138px)
  .copy
    padding: $padding-base-horizontal 0
    +$below(md)
      font-size 0.8em

.learn-more
  color $primary
  font-weight 400
  font-size 16px
  .triangle
    margin-left $padding-base-vertical
    size(10px)

$pager-copy-abs()
  left 0
  position absolute
  width 100%
$pager-copy-text()
  background rgb(0, 0, 0) // fallback color
  background transparent
  $padding-sm()

.pager-nav
  align-items center
  display flex
  justify-content center
  margin 20px
.pager-container
  position relative
  width 100%
  .pager-img
    width 100%
  .pager-copy-img
    $pager-copy-abs()
    margin 48px
    width 35%
  .pager-copy-top
    $pager-copy-abs()
    color #FE5068
    font-size 60px
    font-weight bold
    left 2%
    top 3%
    span
      $pager-copy-text()
  .pager-copy-bottom
    $pager-copy-abs()
    color white
    font-size 90px
    left 3%
    top 12%
    span
      $pager-copy-text()
  .pager-hr
    $pager-copy-abs()
    $pager-copy-text()
    background-color white
    border 1px solid white
    color white
    margin-left 80px
    padding 0
    top 27%
    width 19%
  .pager-footer
    $pager-copy-abs()
    $pager-copy-text()
    color white
    font-size 19px
    padding-left 43px
    top 30%

.page
  background #ccc
  border-radius 50%
  cursor pointer
  height 15px
  width 15px
  & + &
    margin-left 10px


.content-container
  $center(1225px)
  $row(between)
  // max-width 98vw
  padding $padding-xl-horizontal 0
  +$below(1119px)
    $row(around)
    padding $padding-xl-horizontal $padding-xl-vertical

.callout
  $column(between)
  size(556px, 655px)
  text-align left
  border 20px solid $callout-gray-border
  +$below(1119px)
    max-width 96vw

.copy
  $column(between)
  color $text-description
  flex 1
  font-size 18px
  font-weight 300
  line-height $line-height-copy
  padding $padding-xl-horizontal $padding-xl-vertical $padding-xl-horizontal ($padding-xl-vertical * 3)
  line-height $line-height-copy
  color $text-description
  font-weight 300
  font-size 18px
  .title
    text-align center
  .img
    display block
    width 100%

.featured-container
  $row(between)
  max-width 540px
  margin-top 50px
  padding 2px 2px
  +$below(542px)
    $row(around)

.featured
  padding 2px 2px 20px 2px
  transition all .2s ease-in-out
  &:hover
    cursor pointer
    img
      transform scale(1.15)
  +$below(1119px)
    padding-bottom 45px
    width 40%
  .title
    font-weight bold
  .sale
    color $color-sale
  img
    max-width 250px
    transition all .2s ease-in-out
    +$below(1119px)
      max-width 100%


.prefooter
  $center(650px)
  color $text-description
  font-weight 300
  line-height 34px
  padding 150px 20px
