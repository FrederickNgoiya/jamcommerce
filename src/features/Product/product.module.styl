.price
  margin-bottom 30px

.description
  margin-bottom 20px

.product
  $center($scale.md)
  $padding-lg()

.content
  $row(between)

.images
  .main
    +$above(md)
      size(486px, 312px)
    +$below(md)
      max-width 100%

  .thumbnails
    $row(around)
    padding-right 5px
    div
      +$below(md)
        width 30%
    img
      padding-left 5px
      +$above(md)
        size(165px, 109px)
      +$below(md)
        width 100%
      &:hover
        cursor pointer


.details
  $padding-lg()
  $column(between)
  color $text-description
  font-size 18px
  font-weight 300
  line-height $line-height-copy
  width 48%
  +$below(md)
    width 90%

  .sale
    color $color-sale
  .list
    list-style-type disc
    // margin 20px 0 20px 20px
    +$below(md)
      margin-left 20px

  .sizes
    color red

  hr
    margin-bottom 20px
    margin-top 30px
    width 100%

  .button-size
    background-color white
    border none
    color #a2a2a2
    font-family lato
    margin-right 15px
    padding-left 0
    padding-right 0
    text-align center
    &:hover
      cursor pointer
    &:active
      border-bottom 2px solid black
      color black
      margin-bottom -2px

    &.selected
      color black


.quantity
  $padding-md()
  $row(between)
  > div
    margin-right $padding-sm-horizontal
    margin-top 15px
  .copy
    line-height 2
  .selector
    position relative !important
    flex 1
  .button
    background-color $primary
    border none
    color white
    cursor pointer
    font-family lato
    font-size 14px
    font-weight 300
    height 100%
    width 140px
  .disabled
    background-color $gray
    cursor not-allowed

.submit-content
  position relative

  .submit-warning
    color $color-red
    position absolute
    top -30px
    +$below(md)
      top 30px


.back
  margin-top 70px
  margin-bottom 50px
  .left-arrow
    margin-right 6px
    size(10px)

.right-arrow
  margin-left 6px
  size(10px)