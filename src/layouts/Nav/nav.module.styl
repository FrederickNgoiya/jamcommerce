// nav
$navbar-top-height = 50px;
$navbar-bottom-height = 30px;
$nav-link-padding = 10px 15px;
$navbar-padding-vertical = floor(($grid-gutter-width / 2));

$navbar-pad-horiz($height)
  (($height - $line-height-computed) / 2)


$nav-padding($height)
  padding $navbar-pad-horiz($height) $navbar-padding-vertical

$navbar($height, $font-size = 20px)
  height $height
  font-size $font-size
  width 100%
  li
    display inline-block
    height: 100%
    text-align center
    > a
      height: 100%
      cursor pointer
      display block
      $nav-padding($height)

.top
  $grid()
  $navbar($navbar-top-height)
  padding-left $navbar-padding-vertical
  padding-right $navbar-padding-vertical
  border-bottom 1px solid $gray

.title
  $nav-padding($navbar-top-height)
  flex 1
  font-size 24px
  font-weight bold
  text-align center

.cart
  img
    size($navbar-top-height - ($navbar-pad-horiz($navbar-top-height) *2))

.bottom
  $navbar($navbar-bottom-height, 14px)
  $row(center)
  border-bottom 1px solid $gray
  ul
    display inline-block
    a
      $column(center, center)
